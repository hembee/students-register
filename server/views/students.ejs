<!DOCTYPE html>
<html>
  <head>
    <title>Students</title>
    <style>
      /* style.css */

      body,
      table {
        margin: 0;
        padding: 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #f2f2f2;
      }

      button[type="submit"] {
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
      }

      button[type="submit"]:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <h1>Student Records</h1>
    <table>
      <tr>
        <th>Name</th>
        <th>Student ID</th>
        <th>Sign In Time</th>
        <th>Sign Out Time</th>
        <th>Actions</th>
      </tr>
      <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.studentID %></td>
        <td><%= student.signInTime %></td>
        <td>
          <%= student.signOutTime ? student.signOutTime : 'Not signed out' %>
        </td>
        <td>
          <% if (!student.signOutTime) { %>
          <form action="/students/signout" method="POST">
            <input
              type="hidden"
              name="studentID"
              value="<%= student.studentID %>"
            />
            <button type="submit">Sign Out</button>
          </form>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
